{% extends 'template.back.html.twig' %}
{% block title %}Article index{% endblock %}

{% block header %}
    <h1 class="text-center my-4">{{ title }}</h1>
    <p class="lead text-center">{{ homepage_text }}</p>
{% endblock %}
{% block main %}

     <div id="inizioPagina" class="container" style="margin-top: 6rem;">
     <a href="#finePagina"><img src="{{asset('img/icons/down-arrow.png')}}" alt="">Bottom page</a>
        <table class="table table-striped table-hover mt-4">
            <thead class="thead-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Title</th>
                <th scope="col">Title Slug</th>
                <th scope="col">Text</th>
                <th scope="col"> Date </th>
                <th scope="col">Posted</th>
                <th scope="col">Published</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.titleSlug }}</td>
                <td>{{ article.text }}</td>
                <td>{{ article.articleDateCreate ? article.articleDateCreate|date('Y-m-d') : '' }}</td>
                <td>{{ article.articleDatePosted ? article.articleDatePosted|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ article.published ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_article_show', {'id': article.id}) }}">show</a>
                    <a href="{{ path('app_article_edit', {'id': article.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7" class="text-center">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
   <div id="finePagina" class="text-center">
            <a href="{{ path('app_article_new') }}" class="btn btn-success">Create New Article</a>
        </div>
            <a href="#inizioPagina"><img src="{{asset('img/icons/up-arrow.png')}}" alt="">Start page</a>
{% endblock %}