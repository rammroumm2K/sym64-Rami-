{% extends 'base.html.twig' %}
{% block title %}Article index{% endblock %}
{% block body %}
    <h1>Article index</h1>
     <div class="container" style="margin-top: 6rem;">
        <table class="table table-striped table-hover mt-4">
            <thead class="thead-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Title</th>
                <th scope="col">Title_slug</th>
                <th scope="col">Text</th>
                <th scope="col">Article_date_create</th>
                <th scope="col">Article_date_posted</th>
                <th scope="col">Published</th>
                <th scope="col">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.titleSlug }}</td>
                <td>{{ article.text }}</td>
                <td>{{ article.articleDateCreate ? article.articleDateCreate|date('Y-m-d') : '' }}</td>
                <td>{{ article.articleDatePosted ? article.articleDatePosted|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ article.published ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_article_show', {'id': article.id}) }}">show</a>
                    <a href="{{ path('app_article_edit', {'id': article.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7" class="text-center">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
   <div class="text-center">
            <a href="{{ path('app_article_new') }}" class="btn btn-success">Create New Post</a>
        </div>
{% endblock %}