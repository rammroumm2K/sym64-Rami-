{% extends 'template.back.html.twig' %}
{% block title %}Article{% endblock %}
{% block body %}
{% block main %}

    
    <table style="margin-top:70px; padding:10px;" class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Title Slug</th>
                <td>{{ article.titleSlug }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ article.text }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ article.articleDateCreate ? article.articleDateCreate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Posted</th>
                <td>{{ article.articleDatePosted ? article.articleDatePosted|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Published</th>
                <td>{{ article.published ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('app_article_index') }}">back to list</a>
    <a href="{{ path('app_article_edit', {'id': article.id}) }}">edit</a>
    {{ include('article/_delete_form.html.twig') }}
{% endblock %}
{% endblock %}