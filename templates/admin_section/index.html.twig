{% extends 'template.back.html.twig' %}

{% block title %}{{ parent() }} | {{ title }}{% endblock %}

{% block header %}
    <h1 class="text-center my-4">{{ title }}</h1>
    <p class="lead text-center">{{ homepage_text }}</p>
{% endblock %}

{% block main %}
    <div class="container" style="margin-top: 6rem;">
        <table class="table table-striped table-hover mt-4">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Section Title</th>
                    <th scope="col">Description</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for section in sections %}
                <tr>
                    <td>{{ section.id }}</td>
                    <td>{{ section.sectionTitle }}</td>
                    <td>{{ section.sectionDescription }}</td>
                    <td>
                        <a href="{{ path('app_admin_section_show', {'id': section.id}) }}" class="btn btn-info btn-sm">Show</a>
                        <a href="{{ path('app_admin_section_edit', {'id': section.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="text-center">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="text-center">
            <a href="{{ path('app_admin_section_new') }}" class="btn btn-success">Create New Section</a>
        </div>
    </div>
{% endblock %}
