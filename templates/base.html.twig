<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Playstation Post Blogger{% endblock %}</title>

    {% block stylesheets %}
    {% block importmap %}{{importmap ('app')}}{% endblock %}
    <link rel="icon" href="{{ asset ('img/icons/Playstation-ico.ico')}}">   
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    
    {% endblock %}
    
</head>

{% block body %}
<body>

    <!-- NavBar -->
    
    {% block nav %}
    
    {% include "main/_menu.html.twig" %}

    {% endblock %}

   
   
   
   
    {% block carousel %} <!-- Carousel -->
    <div class="carousel-container">
        <div id="carouselExampleIndicators" class="carousel slide">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"
                    aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"
                    aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"
                    aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="{{asset('img/carousel-home/black-myth-wukongwebp.webp')}}" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="{{asset('img/carousel-home/ps5-30th.webp')}}" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="{{asset('img/carousel-home/gran-turismo-7.webp')}}" class="d-block w-100" alt="...">
                </div>

            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
                data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
                data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
    {% endblock %}
    

    <!-- Features -->
    {% block containerPost %}
    <div class="container px-4 py-5" id="custom-cards">
        <h2 class="pb-2 border-bottom">Features</h2>
        <div class="row row-cols-1 row-cols-lg-3 align-items-stretch g-4 py-5">
            <div class="col">
                <div class="card card-cover h-100 overflow-hidden text-bg-dark rounded-4 shadow-lg border-0"
                    style="background: linear-gradient(90deg, hsla(208, 100%, 41%, 1) 0%, hsla(216, 40%, 58%, 1) 100%);;">
                    <div class="d-flex flex-column h-100 p-5 pb-3 text-white text-shadow-1">
                        <h3 class="pt-5 mt-5 mb-4 display-6 lh-1 fw-bold">Exclusive Games</h3>
                        <ul class="d-flex list-unstyled mt-auto">
                            <li class="me-auto">
                                <img src="{{asset('img/icons/ps.png')}}" alt="Playstation" width="45" height="32">
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col">
                <div class="card card-cover h-100 overflow-hidden text-bg-dark rounded-4 shadow-lg border-0"
                    style="background: linear-gradient(90deg, hsla(240, 100%, 50%, 1) 0%, hsla(240, 100%, 15%, 1) 0%, hsla(0, 0%, 0%, 1) 81%);">
                    <div class="d-flex flex-column h-100 p-5 pb-3 text-white text-shadow-1">
                        <h3 class="pt-5 mt-5 mb-4 display-6 lh-1 fw-bold">Crossplay</h3>
                        <ul class="d-flex list-unstyled mt-auto">
                            <li class="me-auto">
                                <img src="{{asset('img/icons/crossplay.png')}}" alt="Crossplay" width="32" height="32">
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col">
                <div class="card card-cover h-100 overflow-hidden text-bg-dark rounded-4 shadow-lg border-0"
                    style="background: linear-gradient(90deg, hsla(46, 100%, 49%, 1) 0%, hsla(46, 100%, 49%, 1) 11%, hsla(329, 20%, 24%, 1) 100%);">
                    <div class="d-flex flex-column h-100 p-5 pb-3 text-shadow-1">
                        <h3 class="pt-5 mt-5 mb-4 display-6 lh-1 fw-bold">Playstation Plus</h3>
                        <ul class="d-flex list-unstyled mt-auto">
                            <li class="me-auto">
                                <img src="{{asset('img/icons/plus.png')}}" alt="Bootstrap" width="32" height="32">
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
    
    {% block psplus %}
     <!-- Playstation Plus -->

        <div id="plus">
        <div class="container-sm p-5">
            <div class="container col-xxl-8 px-4 py-5">
                <div class="row flex-lg-row-reverse align-items-center g-5 py-5">
                    <div class="col-10 col-sm-8 col-lg-6">
                        <img src="{{asset('img/fondo plus.webp')}}" class="d-block mx-lg-auto img-fluid rounded shadow"
                            alt="Bootstrap Themes" width="700" height="500" loading="lazy">
                    </div>
                    <div class="col-lg-6">
                        <h1 class="display-5 fw-bold text-body-emphasis lh-1 mb-3">Welcome to PlayStation Plus</h1>
                        <p class="lead">Enjoy hundreds of ps4, ps5 games. Playstation classics and unmissable benefits
                            from three subscription plans at great prices that unleash the power of your Playstation
                            console.</p>
                        <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                            <button type="button" class="btn btn-dark btn-lg px-4 me-md-2">Contact</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
                <div class="col">
                    
                </div>
               
         
            </div>
        </div>
    </div>



    
    {% endblock %}
   
{% block footer %}
<!-- footer-->
