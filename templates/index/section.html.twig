{% block containerPost %}
<div class="container px-4 py-5" id="custom-cards" style="margin-top:6rem;">
    <h2 class="pb-2 border-bottom text-center text-light">Nos dérniere Post Blog</h2>
    
   

    <section id="gallery">
        <div class="container">
            <div class="row">
            {% for section in sections %}
                                <div class="col-lg-4 mb-4">
                    <div class="card">
                        <img src="https://images.unsplash.com/photo-1477862096227-3a1bb3b08330?ixlib=rb-1.2.1&auto=format&fit=crop&w=700&q=60"
                            alt="" class="card-img-top">
